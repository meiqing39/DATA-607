flights_long <- flights|>
  pivot_longer(
    cols = 3:7,                # 5 city columns
    names_to = "City",         # Names the new text column
    values_to = "Planes"        # Names the new number column
  )

# Take a look at your fully tidy data!
head(flights_long)

flight_long <- flightP_cal|>
  group_by(Airlines, Status, City)|>
  filter(City == "Los angeles)
  summarize(Total_arrival_rate = sum(Planes))|>
  mutate(Percentage = ((Arrival rates/Total_arrival_rate) X 100)))
  
